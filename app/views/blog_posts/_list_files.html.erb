<% Dir.entries(@dir_to_list || dir_to_list).each do |dir| %>
  <% unless dir == '.' || dir == '..' then %>
    <div>
      <a href="<%= "#{@context}/#{dir.gsub(".md",".html")}" %>">
        <%# .to_s stops errors about void variable %>
        <%= dir.to_s %>
      </a>
    </div>
    <% end %>
<% end %>
